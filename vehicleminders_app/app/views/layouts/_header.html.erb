<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
  <%= link_to "Vehicle Minders", logged_in? ? menu_path(current_user) : root_path, id: "logo" %>
  <nav>
  <div class="navbar-header">
  <button id="hamburger" type="button" class="navbar-toggle collapsed">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
</div>
<ul id="navbar-menu"
    class="nav navbar-nav navbar-right collapse navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
      <% if logged_in? %>
      <li class="dropdown">
        <a href="#" id="account" class="dropdown-toggle">
          <%= current_user.name%> <b class="caret"></b>
        </a>
        <ul id="dropdown-menu" class="dropdown-menu">
          <li><%= link_to "設定", edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "ログアウト", logout_path, class: "header-btn",
                                   data: { "turbo-method": :delete } %>
          </li>
        </ul>
      </li>
    <% else %>
    <% if false %><li><%= link_to "ログイン", login_path, class: 'topbtn' %></li><% end %>
    <% end %>
    </ul>
  </nav>
</div>
</header>