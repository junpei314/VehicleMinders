<%= form_with(model: @user, class: 'form-center') do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :名前 %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :メールアドレス %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :Webhook_URL %>
  <%= f.text_field :webhook_url, class: 'form-control' %>

  <%= f.label :パスワード %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :パスワード確認用 %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.label :メールで通知する %>
  <%= f.check_box :email_notification, class: 'form-checkbox' %>

  <%= f.label :Teamsへメッセージ通知する %>
  <%= f.check_box :webhook_notification, class: 'form-checkbox' %>

  <%= f.submit yield(:button_text), class: "form-btn" %>
<% end %>
